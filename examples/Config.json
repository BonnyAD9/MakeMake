{
  "Compiler": "clang",
  "DebugFlags": "-Wall -g -std=c17",
  "ReleaseFlags": "-std=c17 -DNDEBUG -O3",
  "OutName": null,
  "Extension": ".exe",
  "Templates": [
    {
      "Name": "vscm",
      "Description": "VSCode makefile C project with single file using lldb extension",
      "Files": [
        {
          "Name": "main.c",
          "Contents": [
            "#include <stdio.h>",
            "",
            "int main()",
            "{",
            "",
            "}"
          ]
        },
        {
          "Name": "Makefile",
          "Contents": [
            "CC:=clang",
            "OUT:=main.exe",
            "CFLAGS:=-Wall -g -std=c17",
            "RFLAGS:=-std=c17 -DNDEBUG -O3",
            "CFILES:=main.c",
            "",
            "debug: $(CFILES)",
            "\t$(CC) $(CFLAGS) -o $(OUT) $(CFILES)",
            "",
            "release: $(CFILES)",
            "\t$(CC) $(RFLAGS) -o $(OUT) $(CFILES)",
            "",
            "clean:",
            "\tdel $(OUT)"
          ]
        }
      ],
      "Folders": [
        {
          "Name": ".vscode",
          "Files": [
            {
              "Name": "launch.json",
              "Contents": [
                "{",
                "  \"version\": \"0.2.0\",",
                "  \"configurations\": [",
                "    {",
                "      \"type\": \"lldb\",",
                "      \"request\": \"launch\",",
                "      \"name\": \"Debug\",",
                "      \"program\": \"${workspaceFolder}/main.exe\",",
                "      \"args\": [],",
                "      \"cwd\": \"${workspaceFolder}\",",
                "      \"preLaunchTask\": \"Makefile\"",
                "    }",
                "  ]",
                "}"
              ]
            },
            {
              "Name": "tasks.json",
              "Contents": [
                "{",
                "  \"version\": \"2.0.0\",",
                "  \"tasks\": [",
                "    {",
                "      \"label\": \"Makefile\",",
                "      \"type\": \"shell\",",
                "      \"command\": \"make\",",
                "    }",
                "  ]",
                "}"
              ]
            }
          ],
          "Folders": []
        }
      ]
    }
  ]
}
